<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <%= render "header" %>
        <link rel="stylesheet" href="<%= relative_path_to("/css/top.css") %>" type="text/css" />
    </head>
    <body>
        <div id="bg">
            <div class="wrap">

                <!-- logo -->
                <div id="logo">
                  <a href="<%= relative_path_to("/index.html")%>"><img src="<%= relative_path_to("/images/logo.png")%>" alt="Ricora logo"></img></a>
                </div>
                <!-- /logo -->

                <!-- menu -->
                <div id="mainmenu">
                  <%= render 'menu' %>
                </div>
                <!-- /menu -->

                <!-- pitch -->
                <div id="pitch">
                  <%= render 'slideshow' %>
                </div>

                <!-- main -->
                <div id="main">
                    <div id="page">                    
                      <ul>
                      <% sorted_articles[0, 10].each do |article| %>
                      <li>
                      <%= link_to(article[:title], article.path) %>
                      <span class="meta">(<%= article[:created_at] %>)</span>
                      </li>
                      <% end %>
                      </ul>
                      <%= yield %>
                    </div>
                </div>
                <!-- /main -->

                <!-- side -->
                <div id="side">
                  <%= render 'side' %>
                </div>
                <!-- /side -->
            </div>

            <!-- footer -->
            <div id="footer">
              <%= render 'footer' %>
            </div>
            <!-- /footer -->
        </div>
    </body>
    <!-- vim: ft=eruby -->
</html>

